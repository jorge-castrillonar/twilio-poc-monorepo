# Frontend Application Configuration
# Copy this file to .env.local and update with your actual values

# API Configuration
VITE_API_URL=/graphql
VITE_API_KEY=

# Backend Server URL (for proxy)
VITE_BACKEND_URL=http://localhost:8082

# Development Server Configuration
VITE_PORT=3001

# Environment Mode (automatically set by Vite)
# MODE=development | production | test

# Feature Flags (optional)
VITE_ENABLE_MFA=true
VITE_ENABLE_FILE_UPLOAD=true
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_LOGGING=true

# Security (optional overrides)
# VITE_TOKEN_EXPIRY_MS=3600000
# VITE_SESSION_TIMEOUT_MS=1800000
# VITE_MAX_LOGIN_ATTEMPTS=5

# Upload Configuration (optional overrides)
# VITE_MAX_FILE_SIZE_BYTES=10485760
# VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# UI Configuration (optional overrides)
# VITE_TOAST_DURATION=5000
# VITE_DEBOUNCE_DELAY=300

# SpaceX GraphQL API
VITE_SPACEX_GRAPHQL_URL=https://main--spacex-l4uc6p.apollographos.net/graphql
